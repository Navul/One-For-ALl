{
  "name": "oneforall-community-services-directory",
  "version": "1.0.0",
  "description": "A web app where local service providers can list services, and users can book them.",
  "main": "backend/app.js",
  "scripts": {
    "start": "node backend/app.js",
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server": "cd backend && npm start",
    "server:dev": "cd backend && npm run dev",
    "server:prod": "cd backend && npm run production",
    "client": "cd frontend && npm start",
    "client:dev": "cd frontend && npm run dev",
    "client:build": "cd frontend && npm run build",
    "client:build:dev": "cd frontend && npm run build:dev",
    "client:build:prod": "cd frontend && npm run build:prod",
    "install-all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "build": "cd frontend && npm run build",
    "build:dev": "cd frontend && npm run build:dev",
    "build:prod": "cd frontend && npm run build:prod",
    "deploy:render": "npm run build:prod",
    "heroku-postbuild": "npm run install-all && npm run build:prod",
    "render-postbuild": "npm run install-all && npm run build:prod",
    "postinstall": "cd backend && npm install && cd ../frontend && npm install"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "mongoose": "^8.16.2",
    "react-router-dom": "^7.6.3"
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "nodemon": "^2.0.4",
    "cross-env": "^10.0.0"
  },
  "keywords": [
    "local",
    "services",
    "directory",
    "mern"
  ],
  "author": "Your Name",
  "license": "MIT"
}
